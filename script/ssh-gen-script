#/usr/bin/bash

while getopts e:f:p:c: flag
do
    case "${flag}" in
        e) email=${OPTARG};;
        f) file=${OPTARG};;
        p) password=${OPTARG};;
		c) create=${OPTARG};;
    esac
done

if [[ "$create" == "yes"  ]];then
	echo "ssh key created."
	ssh-keygen -t ed25519 -C "$email" -f "$HOME/.ssh/$file" -P "$password" &
	wait
fi
echo "add ssh key."
eval "$(ssh-agent -s)"
wait
ssh-add $HOME/.ssh/$file;
wait
cat "$HOME/.ssh/$file.pub"
